h1 {
  @extend %rhythm-xl;
  padding-bottom: $line-height;
}

h2 {
  @extend %rhythm-l;
  padding-bottom: $line-height * .8;
}

h2 {
  @extend %rhythm-m;
  padding-bottom: $line-height * .6;
}
