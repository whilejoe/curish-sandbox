@import url('https://fonts.googleapis.com/css?family=Catamaran:500,600,700|Crimson+Text:400,600|Noto+Sans:400,700|Roboto+Slab:300');

$line-height: 28px;

$font-sizes:  (s: 13px, m: 15px, l: 19px, xl: 27px);
$cap-heights: (s: 0.8,  m: 0.8,  l: 0.68, xl: 0.68);

// Accepts `s`, `m`, `l`, or `xl`
@function rhythm-shift($size-name) {
  $font-size: map-get($font-sizes, $size-name);
  $cap-height: map-get($cap-heights, $size-name);

  $offset: ($line-height - $cap-height * $font-size) / 2;
  @return round($offset);
}

$offset-s: rhythm-shift(s);
$offset-m: rhythm-shift(m);
$offset-l: rhythm-shift(l);
$offset-xl: rhythm-shift(xl);

.rhythm-s,
%rhythm-s {
  font-size: map-get($font-sizes, s);
  margin-top: $offset-s;
  margin-bottom: -1 * $offset-s;
}

.rhythm-m,
%rhythm-m {
  font-size: map-get($font-sizes, m);
  margin-top: $offset-m;
  margin-bottom: -1 * $offset-m;
}

.rhythm-l,
%rhythm-l {
  font-size: map-get($font-sizes, l);
  margin-top: $offset-l;
  margin-bottom: -1 * $offset-l;
}

.rhythm-xl,
%rhythm-xl {
  font-size: map-get($font-sizes, xl);
  margin-top: $offset-xl;
  margin-bottom: -1 * $offset-xl;
}

.pt-1 {
  padding-top: $line-height;
}

.pb-1 {
  padding-bottom: $line-height;
}

$sanserif-font: 'Catamaran', sans-serif !default;
$heading-font: $sanserif-font !default;
$heading-font-weight: 600 !default;

$serif-font: 'Roboto Slab', serif !default;
$copy-font: $serif-font !default;
$copy-font-weight: 300;

html {
  font-size: 16px;
}

body {
  margin: 0;
  padding: 0;
  font-family: $copy-font;
  font-weight: $copy-font-weight;
  line-height: $line-height;
  color: #292929;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: auto;
  text-rendering: optimizeLegibility;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $heading-font;
  font-weight: $heading-font-weight;
}

